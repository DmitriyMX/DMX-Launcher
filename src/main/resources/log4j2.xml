<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [%20.20logger:%-4L] %msg%n"/>
        </Console>
        <File name="File" fileName="launcher.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %level [%logger:%-4L] %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>